<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.dao.BoardDAO">
	
	<insert id="insert" parameterType="BoardDTO" >
		insert into board(no,name) values(#{no},#{name})
	</insert>
	
	<select id="read" resultType="BoardDTO" parameterType="Long">
		select no, name from board where no = #{no}
	</select>
	
	<select id="readAll" resultType="BoardDTO">
		select no, name from board;
	</select>
	
	<update id="modify" parameterType="BoardDTO">
		update board set name = #{name} where no = #{no}
	</update>
	
	<delete id="delete" parameterType="Long">
		delete from board where no = #{no}
	</delete>
	
</mapper>